{
	"compilerOptions": {
		"module": "es2022",
		"esModuleInterop": true,
		"target": "es2024",
		"noImplicitAny": true,
		"incremental": true,
		"moduleResolution": "bundler",
		"sourceMap": false,
		"rootDir": ".",
		"strict": true,
		"noEmit": false,
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"outDir": "./dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"typeRoots": ["./node_modules/@types", "./src/types"]
	},
	"include": ["src/**/**.ts"],
	"exclude": ["node_modules", "./dist", "./confg", "./seeders", "./models", "./tests"]
}
