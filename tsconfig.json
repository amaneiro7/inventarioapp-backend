{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2024",
    "noImplicitAny": true,
    "incremental": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
    // "declaration": true,
    // "forceConsistentCasingInFileNames": true,
    // "skipLibCheck": true
  },
  "include": [
    "src/**/**.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist",
    "./confg",
    "./seeders",
    "./models",
    "./__test__"
  ]
}